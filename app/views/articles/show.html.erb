
<div class="ui segment">

  <div class="ui top attached label" style="font-size: large">
    <i class="file text icon"></i><%= @article.title %>

    <%= link_to articles_path do %>
        <i class="reply all icon"></i>
    <%end%>

    <%= link_to edit_article_path(@article) do %>
        <i class="edit icon"></i>
    <%end%>

    <%= link_to article_path(@article), method: :delete,
                data: { confirm: 'Are you sure?' } do %>
        <i class="remove icon"></i>
    <%end%>

  </div>

  <div class="ui">
    <h3 class="ui dividing header"></h3>
    <%= markdown(@article.text.html_safe) %>
  </div>
</div>

<div class="ui form segment" style="margin: 0px">

  <div class="ui comments">
    <a class="ui green ribbon label"><i class="comments icon"></i>共收到9条评论</a>
    <% @article.comments.each do |comment| %>
        <div class="comment">
          <a class="avatar">
            <%= image_tag "matt.jpg" %>
          </a>
          <div class="content">
            <a class="author">  <%= comment.commenter %></a>
            <div class="metadata">
              <span class="date">Today at 5:42PM</span>
            </div>
            <div class="text">
              <%= comment.body %>
            </div>
            <div class="actions">
              <%= link_to  [comment.article, comment],
                           method: :delete,
                           data: { confirm: 'Are you sure?' }  do %>
                  <i class="remove icon"></i>删除
              <%end%>
            </div>
          </div>
        </div>
    <% end %>
  </div>

  <div>
    <%= form_for([@article, @article.comments.build]) do |f| %>

        <%= f.text_field :commenter %>
        <%= f.text_area :body %>
        <%= f.submit "回复", class: "ui green button"%>
    <% end %>
  </div>

</div>
