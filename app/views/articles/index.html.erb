<div class="ui two column grid">
  <div class="twelve wide column"   >
    <div class="ui form segment" style="margin: 0px">
      <h3 class="ui dividing header"><i class="sign in icon"></i>文章列表
      </h3>

      <div class="ui divided items">
        <% @articles.each do |article| %>

            <div class="link item">

              <div class="ui tiny image">
                <a class="ui teal ribbon label">精</a>
                <%= image_tag "matt.jpg" %>

              </div>
              <div class="content">
                <a class="header"><%= article.title %></a>
                <div class="description">
                  <!--<%= markdown(article.text.truncate(100).html_safe) %>-->
                  <%= link_to '【阅读全文】', article_path(article) %>
                </div>
              </div>
            </div>

        <% end %>

      </div>

    </div>
  </div>

  <div class="four wide column">
    <div class="ui vertical menu">
      <a class="active teal item">
        收件箱
        <div class="ui teal label">1</div>
      </a>
      <a class="item">
        垃圾邮件
        <div class="ui label">51</div>
      </a>
      <a class="item">
        更新
        <div class="ui label">1</div>
      </a>
      <div class="item">
        <div class="ui transparent icon input">
          <input type="text" placeholder="搜索邮件...">
          <i class="search icon"></i>
        </div>
      </div>
    </div>

    <h3 class="ui dividing header"><i class="sign in icon"></i>关注列表
    </h3>
    <div class="ui divided list">
      <div class="item">
        <%= image_tag "matt.jpg", class: "ui  avatar image"%>
        <div class="content">
          <a class="header">王五</a>
        </div>
      </div>
      <div class="item">
        <%= image_tag "matt.jpg", class: "ui  avatar image"%>
        <div class="content">
          <a class="header">李四</a>
        </div>
      </div>
      <div class="item">
        <%= image_tag "matt.jpg", class: "ui  avatar image"%>
        <div class="content">
          <a class="header">张三</a>
        </div>
      </div>
    </div>
  </div>
</div>